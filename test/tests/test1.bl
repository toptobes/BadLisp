(defn str_from_fmt::char* [fmt::char* ...]
    (let [argv::va_list NULL]
        (va_start argv, fmt)
        (let [length::int (vsnprintf NULL, 0, fmt, argv)
              buff::char* (malloc (+ length 1))]
           (vsprintf buff, fmt, argv)
           (va_end argv)
           (return buff))))
